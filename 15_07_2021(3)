class Solutions
{
public int [] sortArrayByParityII(int[] nums ) 
{
	ArrayList<Integer> even=new ArrayList<Integer>() ;
	ArrayList<Integer> odd=new ArrayList<Integer>() ;
	for (int i =0; i<nums.length;i++) 
	{
		if(nums[i]%2==0) 
		even.add(nums[i]) ;
		else
		odd.add(nums[i]) ;
		}
		int i=0;
		for (integer val:even) 
		{
			nums[i]=val;
			i+=2;
			}
			int i=1;
			for(integer val:odd) 
			{
				nums[i]=val;
				i+=2;
				}
				return nums;
				}
				}
			
		
		
	
		

